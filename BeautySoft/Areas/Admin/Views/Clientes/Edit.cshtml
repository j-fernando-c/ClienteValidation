@model BeautySoft.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<br />
<br />
<h3 class="text-center">Editar Cliente</h3>
<form method="POST" asp-action="Create" enctype="multipart/form-data">

    <!--Linea de codigo para saber que id se va a actualizar-->
    <input type="hidden" asp-for="Id" />

    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del Cliente" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Apellido"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Apellido" class="form-control" placeholder="Ingrese el Apellido del Cliente" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Telefono"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Telefono" class="form-control" placeholder="Ingrese el Telefono del Cliente" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Email"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Email" class="form-control" placeholder="Ingrese el Email del Cliente" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}